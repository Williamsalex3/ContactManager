@model IEnumerable<ContactManager.Models.Categorie>
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Contacts By Categorie
    </a>
    <ul class="dropdown-menu">
        @foreach (var item in Model) @* pour chaque categorie, repeat this  *@
        {
            <li>
                <a class="dropdown-item"
                   asp-controller="Contact"
                   asp-action="ContactCategorie"
                   asp-route-id="@item.CategorieID">
                    @item.CategorieName
                </a>@* creer methode  ContactCategorie dans controlleur contact*@
            </li>
        }

        
    </ul>
</li>
